<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="screen"
    tools:context=".BeerFragment">

    <Button
        android:id="@+id/button_fragment_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="2dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/layout_aguila"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:gravity="center_vertical"
            android:isScrollContainer="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_aguila"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/text_aguila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aguila" />


        </LinearLayout>

        <View
            android:id="@+id/divider_0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:gravity="center_vertical"
            android:isScrollContainer="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_aguila_lihgt"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/text_aguila_lihgt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aguila_lihgt" />
        </LinearLayout>

        <View
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:gravity="center_vertical"
            android:isScrollContainer="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_costena_bacana"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/text_costena_bacana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/costena_bacana" />
        </LinearLayout>

        <View
            android:id="@+id/divider_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:gravity="center_vertical"
            android:isScrollContainer="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_poker"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/text_poker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/poker" />
        </LinearLayout>

        <View
            android:id="@+id/divider_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:gravity="center_vertical"
            android:isScrollContainer="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_corona"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/text_corona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/corona" />
        </LinearLayout>

        <View
            android:id="@+id/divider_4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>