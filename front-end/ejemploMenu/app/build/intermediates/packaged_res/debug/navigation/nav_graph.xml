<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <!-- fragment_home-->

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.example.ejemplomenu.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_BeerFragment"
            app:destination="@id/BeerFragment" />

        <action
            android:id="@+id/action_HomeFragment_to_LiqueurFragment"
            app:destination="@id/LiqueurFragment" />

        <action
            android:id="@+id/action_HomeFragment_to_WaterFragment"
            app:destination="@id/WaterFragment" />

        <action
            android:id="@+id/action_HomeFragment_to_SodaFragment"
            app:destination="@id/SodaFragment" />

    </fragment>

    <!-- fragment_home-->
    <!-- fragment_beer-->

    <fragment
        android:id="@+id/BeerFragment"
        android:name="com.example.ejemplomenu.BeerFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_beer">

        <action
            android:id="@+id/action_BeerFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />

        <action
            android:id="@+id/action_BeerFragment_to_DetailCategoryFragment"
            app:destination="@id/DetailCategoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/DetailCategoryFragment"
        android:name="com.example.ejemplomenu.DetailCategoryFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_detail_category">

        <action
            android:id="@+id/action_DetailCategoryFragment_to_BeerFragment"
            app:destination="@id/BeerFragment" />
    </fragment>

    <!-- fragment_beer-->
    <!-- fragment_liqueur-->

    <fragment
        android:id="@+id/LiqueurFragment"
        android:name="com.example.ejemplomenu.LiqueurFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_liqueur">

        <action
            android:id="@+id/action_LiqueurFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>

    <!-- fragment_liqueur-->
    <!-- fragment_water-->

    <fragment
        android:id="@+id/WaterFragment"
        android:name="com.example.ejemplomenu.WaterFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_water">

        <action
            android:id="@+id/action_WaterFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>

    <!-- fragment_water-->
    <!-- fragment_soda-->

    <fragment
        android:id="@+id/SodaFragment"
        android:name="com.example.ejemplomenu.SodaFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_soda">

        <action
            android:id="@+id/action_SodaFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
    <!-- fragment_soda-->
</navigation>